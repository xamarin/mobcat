<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:Microsoft.MobCAT.Forms.Pages;assembly=MobCAT.Forms" 
    xmlns:vm="clr-namespace:News.ViewModels;assembly=News" 
    xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView" 
    x:TypeArguments="vm:NewsByCategoryViewModel" 
    x:Class="News.Pages.NewsByCategoryPage" 
    BackgroundColor="#3c3c3c"
    Title="news"
    Icon="ic_news.png">
        
    <cv:CarouselView ItemsSource="{Binding Categories}">
        <cv:CarouselView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Vertical"
                             VerticalOptions="FillAndExpand" 
                             HorizontalOptions="FillAndExpand"
                             Padding="0" 
                             Margin="0"
                             Spacing="0">
                    <Label Text="{Binding Title}" 
                           TextColor="White" 
                           VerticalTextAlignment="End"
                           HorizontalTextAlignment="Start"
                           FontSize="33"
                           LineBreakMode="MiddleTruncation"
                           MaxLines="1"
                           Margin="15,30,15,10"/>
                    <Grid VerticalOptions="Start" 
                             HorizontalOptions="FillAndExpand"
                             BackgroundColor="#2c2c2c"
                             HeightRequest="1"/>
                    <ListView ItemSelected="Handle_ItemSelected"
                              ItemsSource="{Binding Articles}"
                              SelectionMode="Single"
                              BackgroundColor="#585858"
                              RowHeight="230"
                              SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame BackgroundColor="#3c3c3c" 
                                           HasShadow="true"
                                           IsClippedToBounds="false"
                                           VerticalOptions="FillAndExpand"
                                           HorizontalOptions="FillAndExpand"
                                           Margin="10"
                                           Padding="0"
                                           CornerRadius="10">
                                        <Frame BackgroundColor="Transparent" 
                                               HasShadow="false"
                                               IsClippedToBounds="true"
                                               VerticalOptions="FillAndExpand"
                                               HorizontalOptions="FillAndExpand"
                                               Margin="0"
                                               Padding="0"
                                               CornerRadius="10">
                                             <Grid VerticalOptions="FillAndExpand"
                                                   HorizontalOptions="FillAndExpand">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0.65*"/>
                                                    <RowDefinition Height="0.35*"/>
                                                </Grid.RowDefinitions>
                                                <Label Text="ðŸ—žï¸" 
                                                       FontSize="60" 
                                                       TextColor="White"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="Center"
                                                       Grid.Row="0"/>
                                                <Image Source="{Binding UrlToImage}"
                                                       VerticalOptions="FillAndExpand"
                                                       HorizontalOptions="FillAndExpand"
                                                       Aspect="AspectFill"
                                                       Grid.Row="0"
                                                       Grid.RowSpan="2"/>
                                                <Grid VerticalOptions="FillAndExpand" 
                                                      HorizontalOptions="FillAndExpand"
                                                      BackgroundColor="#e6272727"
                                                      Grid.Row="1">
                                                    <Label Text="{Binding Title}" 
                                                           TextColor="White"
                                                           MaxLines="2"
                                                           FontSize="18"
                                                           Margin="10,0,10,0"
                                                           VerticalOptions="CenterAndExpand"
                                                           LineBreakMode="TailTruncation" />
                                                </Grid>
                                            </Grid>
                                        </Frame>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </DataTemplate>
        </cv:CarouselView.ItemTemplate>
    </cv:CarouselView>

</local:BaseContentPage>