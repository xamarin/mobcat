<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:SampleApp" 
    x:Class="SampleApp.MainPage">
    <StackLayout Margin="5" VerticalOptions="CenterAndExpand">
        <Label Text="Items in sequence:" Style="{DynamicResource SubtitleStyle}" />
        <Entry x:Name="ItemsInSequenceEntry" Keyboard="Numeric" Text="10" />
        <Button Text="Get Fibonacci" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Handle_Clicked" />
    </StackLayout>
</ContentPage>